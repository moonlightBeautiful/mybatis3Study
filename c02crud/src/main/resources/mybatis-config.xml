<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <properties resource="jdbc.properties"/>
    <typeAliases>
        <!-- 设置别名有二种方式：1.扫描model所在包默认别名（和类名一样）,以后用这种方式。2.对model起指定别名。 -->
        <!-- 1.扫描model类所在包路径，统一默认别名为类名,以后用这种方式。 -->
        <package name="com.java1234.model"/>
        <!-- 2.对model起指定别名。 -->
        <!-- <typeAlias alias="Student" type="com.java1234.com.java1234.model.Student"/>-->
    </typeAliases>
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="${jdbc.driverClassName}"/>
                <property name="url" value="${jdbc.url}"/>
                <property name="username" value="${jdbc.username}"/>
                <property name="password" value="${jdbc.password}"/>
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <!-- 注册映射器mapper的三种方式：1.引入具体的映射文件 2.引入具体的映射dao接口 3.扫描Mapper所在包自动引入(用这种方式)-->
        <!-- 1.引入具体的映射文件-->
       <!-- <mapper resource="com/java1234/mappers/StudentMapper.xml"/>-->
        <!-- 2.引入具体的映射dao接口-->
        <!--<mapper class="com.java1234.mappers.StudentMapper"/>-->
        <!-- 3.扫描dao接口所在包自动引入(以后用这种方式)-->
        <package name="com.java1234.mappers"/>
    </mappers>
</configuration>
